/* components/itemview/itemview.wxss */
.item-navigator {
  width: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 15rpx;
  display: inline-block;
}


.item-navigator .item-group {
  width: 100%;
}

.item-group .thumbnail-group {
  width: 100%;
  height: 284rpx;
}

.thumbnail-group .thumbnail {
  width: 100%;
  height: 100%;
}

.item-group .item-title {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-group text {
  margin-right: 0;
  font-size: 24rpx;

}