/* components/indexmodule/indexmodule.wxss */
/* 搜索栏导航 */
.search {
  width: auto;
  height: auto;
  padding: 20rpx 24rpx;
  background-color: #41be57;
}

.search-navigator {
  width: 700rpx;
  height: 68rpx;
  border-radius: 15rpx;
  background-color: #fff;
}

.icon-box-img {
  margin: 18rpx 50%;
}

/* 电影模块 */
.module-group {
  padding: 40rpx;
  background-color: #fff;
}

.module-group .module-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 36rpx;
}
.module-top .module-title {
  color: #494949;
}
.module-top .module-more {
  color: #41be57;
}
.module-scoll-view {
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}
