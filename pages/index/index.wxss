

/* 电影模块 */
.module-group {
  padding: 40rpx;
  background-color: #fff;
}

.module-group .module-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 36rpx;
}
.module-top .module-title {
  color: #494949;
}
.module-top .module-more {
  color: #41be57;
}
.module-scoll-view {
  margin-top: 40rpx;
  width: 100%;
  height: 400rpx;
  white-space: nowrap;
}
.module-scoll-view .item-navigator {
  width: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
}
.module-scoll-view .item-navigator:last-of-type {
  margin-right: 0;
}
.item-navigator .item-group {
  width: 100%;
}
.item-group .thumbnail-group {
  width: 100%;
  height: 284rpx;
}
.thumbnail-group .thumbnail {
  width: 100%;
  height: 100%;
}
.item-group .item-title {
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.item-group text {
  margin-right: 0;
  font-size: 24rpx;
  
}
