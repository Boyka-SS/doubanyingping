.container {
  padding: 20rpx 30rpx;
}

.item-group {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-group .thumbnail {
  width: 40rpx;
  height: 50rpx;
}

.item-group .item-title {
  margin: 0 10rpx;
  font-size: 32rpx;
  color: #41be57;
}

.item-group .item-rate {
  font-size: 28rpx;
  color: #ccc;
}

.comment-title {
  margin-top: 60rpx;
  font-size: 40rpx;
}

.page-btn-group {
  margin: 40rpx 0;
  display: flex;
  justify-content: flex-start;
  align-self: center;
}

.page-btn-group .page-btn {
  flex: 1;
  height: 100rpx;
  margin: 0 10rpx;
  color: #898989;
  border-color: #898989;
  border-bottom-color: #898989;
  line-height: 100rpx;
}